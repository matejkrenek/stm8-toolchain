#!/bin/bash

if [[ $OS == Windows_NT ]]; then
    echo Windows
    sdccrm=.make/sdccrm.exe
    sdasstm8='/c/Program Files/SDCC/bin/sdasstm8.exe'
else
    echo Linux
    sdccrm=sdccrm
    sdasstm8=sdasstm8
fi
echo $DEVICE
"$sdccrm" $(tr '\r\n' ' ' < exclude_reference) -r $@

for soubor in $@; do 
    "$sdasstm8" -plosg -ff $soubor; 
done
